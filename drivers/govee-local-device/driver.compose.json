{
  "name": {
    "en": "Local API devices"
  },
  "class": "light",
  "platforms": ["local"],
  "capabilities": [
    "onoff",
    "dim",
    "light_saturation",
    "light_hue",
    "light_temperature",
    "light_mode",
    "lightScenes.localdevice",
    "lightDiyScenes.localdevice",
    "snapshots.localdevice",
    "musicMode.localdevice",
    "gradientToggle.localdevice",
    "segmentControlColor.localdevice",
    "segmentControlBrightness.localdevice"
  ],
  "connectivity": [ "lan", "cloud" ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": false
      },
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}